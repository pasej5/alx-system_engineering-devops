#!/usr/bin/env bash
# Bash script that configures an Ubuntu server 
# local hosts resolves to 127.0.0.2
# facebook.com resolves to 8.8.8.8

sudo cp /etc/hosts ~/hosts.bak
sed -i 's/^127.0.0.1*localhost$/127.0.0.2 localhost' ~/hosts.bak
sed -i '/^.*facebook.com.*$/d' ~/hosts.bak
echo "8.8.8.8 facebook.com" >> ~/hosts.bak
sudo cp -f ~hosts.bak/etc/hosts
rm ~/hosts.bak
